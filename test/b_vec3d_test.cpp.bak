#include <iostream>

#include "vec3d.h"

int main()
{
  pinang::Vec3d v1(0, 0, 0);
  pinang::Vec3d v2(1, 0, 0);
  pinang::Vec3d v3(0, 1, 0);
  pinang::Vec3d v4(0, 0, 1);
  pinang::Vec3d v5(2, 2, 1);
  pinang::Vec3d v6(3, 1, -4);

  pinang::Vec3d v_tmp1;
  pinang::Vec3d v_tmp2;
  pinang::Vec3d v_tmp3;

  std::cout << "v1 = " << v1 << std::endl;
  std::cout << "v2 = " << v2 << std::endl;
  std::cout << "v3 = " << v3 << std::endl;
  std::cout << "v4 = " << v4 << std::endl;
  std::cout << "v5 = " << v5 << std::endl;
  std::cout << "v6 = " << v6 << std::endl;

  std::cout << " ------------------- " << std::endl;
  std::cout << "v1 + v2 = " << v1 + v2 << std::endl;
  std::cout << "v3 - v4 = " << v3 + v4 << std::endl;
  std::cout << "v5 * v6 = " << v5 + v6 << std::endl;
  std::cout << "v2 x v3 = " << v2 ^ v3 << std::endl;

  return 0;
}
